<Window x:Class="WpfUI.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        mc:Ignorable="d"
        Title="{Binding Title}" SizeToContent="Height" Height="150" Width="600" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="sudoku.ico" >
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,8" >
            <Button Content ="OK" Command="{Binding CommitCommand}" Margin="5,0" Width="60"/>
        </WrapPanel>
        <Label Content="{Binding Info}" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </DockPanel>
</Window>
