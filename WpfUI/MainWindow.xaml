            <!-- Borders -->
            <Rectangle Grid.ColumnSpan="9" Grid.RowSpan="9" Stroke="Black" StrokeThickness="4"/>
            <Rectangle Grid.Row ="2" Grid.ColumnSpan="9" Height="2" Fill="Black" VerticalAlignment="Bottom"/>
